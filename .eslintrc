{
	"env": {
		"browser": true,
		"es6": true,
		"node": true,
		"jquery": true
	},
	"extends": ["prettier", "standard"],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["prettier"],
	"rules": {
		"camelcase": 2,
		"comma-dangle": 0,
		"indent": [
			"error",
			2,
			{
				"SwitchCase": 2
			}
		],
		"linebreak-style": [2, "unix"],
		"no-alert": 1,
		"no-await-in-loop": 0,
		"no-debugger": 0,
		"no-console": 1,
		"no-unused-vars": [
			1,
			{
				"ignoreSiblings": true,
				"argsIgnorePattern": "res|next|^err"
			}
		],
		"no-param-reassign": [
			2,
			{
				"props": false
			}
		],
		"prefer-destructuring": 1,
		"prefer-template": 2,
		"quotes": [
			2,
			"single",
			{
				"avoidEscape": true,
				"allowTemplateLiterals": true
			}
		],
		"prettier/prettier": [
			"error",
			{
				"singleQuote": true,
				"trailingComma": "es5"
			}
		],
		"semi": 0,
		"space-before-function-paren": 0
	}
}
